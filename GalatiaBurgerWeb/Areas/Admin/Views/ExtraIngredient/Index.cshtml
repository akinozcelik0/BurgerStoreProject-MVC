@model IEnumerable<GalatiaBurger.Models.ExtraIngredient>
@{
    ViewData["Title"] = "Index";
}


<div class="conrainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Extra Ingredient List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ExtraIngredient" asp-action="Create" class="btn btn-primary "> <i class="bi bi-bookmark-plus"></i> &nbsp; Create New Extra Ingredient</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">@item.Name</td>
                <td width="30%">@item.Price</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-warning mx-2" asp-controller="ExtraIngredient" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>EDIT
                        </a>
                        <a class="btn btn-danger mx-2" asp-controller="ExtraIngredient" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash-fill"></i>DELETE
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>